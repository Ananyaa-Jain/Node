{
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "printWidth": 80,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "semi": true,
        "trailingComma": "es5"
      }
    },
    {
      "files": "*.ejs",
      "options": {
        "tabWidth": 2,
        "printWidth": 100,
        "htmlWhitespaceSensitivity": "strict"
      }
    }
  ]
}
